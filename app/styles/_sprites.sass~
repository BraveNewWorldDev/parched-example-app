$_sprite-list: ()
$_sprite-dimensions: ()

// Register sprite `sprite-logo`
$_sprite-list: append($_sprite-list, sprite-logo)
$_sprite-dimensions: append($_sprite-dimensions, 113px 23px)

// Quick access to width/height
@function icon-sprite-dimensions($sprite-name)
  $index: index($_sprite-list, $sprite-name)
  @return nth($_sprite-dimensions, $index)

@function icon-sprite-width($sprite-name)
  $dimensions: icon-sprite-dimensions($sprite-name)
  @return nth($dimensions, 1)

@function icon-sprite-height($sprite-name)
  $dimensions: icon-sprite-dimensions($sprite-name)
  @return nth($dimensions, 2)

%icon-sprite-base
  background-image: url('/images/sprite-map-e4011b0776.png')
  text-indent: -9999px
  display: block

.icon-sprite-logo
  @extend %icon-sprite-base

  background-position: -0px -0px
  width: icon-sprite-width(sprite-logo)
  height: icon-sprite-height(sprite-logo)

@media only screen and (-webkit-min-device-pixel-ratio: 1.25), only screen and (min--moz-device-pixel-ratio: 1.25), only screen and (-o-min-device-pixel-ratio: 1.25/1), only screen and (min-device-pixel-ratio: 1.25), only screen and (min-resolution: 200dpi), only screen and (min-resolution: 1.25dppx)
  %icon-sprite-base
    background-image: url('/images/sprite-map-2x-05208d89cb.png')
    -webkit-background-size: 113px auto
    -moz-background-size: 113px auto
    -o-background-size: 113px auto
    background-size: 113px auto

  .icon-sprite-logo
    background-position: -0px -0px